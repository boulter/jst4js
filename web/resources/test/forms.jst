<html>
<head>
<title>Form Tests</title>
</head>
<body>
    <% var f = Form.form( "/forms", null, function() { %>
        <p>
            First Name <%= Form.textfield("firstname") %>
        </p>
        <p>
            Last Name <%= Form.textfield("lastname") %>
        </p>
        <p>
            <%= Form.select("title", ["None", "Mr.", "Mrs.", "Ms.", "Dr."], "None") %>
        </p>
        <p>
            <%= Form.radio("gender", "male", false) %>
            <%= Form.radio("gender", "female", false) %>
        </p>
        <p>
        <p>
            Password <%= Form.password() %><br/>
            Confirm Password <%= Form.password() %><br/>
        </p>
        <p>
            Picture<br/>
            <%= Form.fileUpload() %>
        </p>
        <p>
            Comments<br/>
            <%= Form.textarea("comments", 20, 40) %>
        </p>
        <p>
            <%= Form.checkbox("termsOfUse", "true", false ) %> I accept the Terms of Use
        </p>
        <p>
            <%= Form.submit("signUp", "Sign Up") %>
        </p>
    <% } ); %>
    <%= f %>
</body>

</html>